{
  "name": "@wai-ri/monorepo",
  "private": true,
  "version": "0.0.99",
  "description": "util",
  "author": "ziloen",
  "license": "ISC",
  "scripts": {
    "test": "vitest --ui",
    "release": "bumpp package.json packages/*/package.json --commit --no-push && pnpm -r publish --access public",
    "lint": "eslint . --ignore-pattern '*.test.*' --fix",
    "typecheck": "vitest typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.4.3",
    "@vitest/ui": "^0.33.0",
    "@ziloen/eslint-config": "^0.0.97",
    "@ziloen/eslint-config-format": "^0.0.97",
    "bumpp": "^9.1.1",
    "eslint": "^8.45.0",
    "jsdom": "^22.1.0",
    "typescript-lib-enhancer": "^1.0.9",
    "vite": "^4.4.6",
    "vitest": "^0.33.0"
  },
  "dependencies": {
    "typescript": "^5.1.6"
  },
  "eslintConfig": {
    "extends": [
      "@ziloen",
      "@ziloen/eslint-config-format"
    ],
    "rules": {
      "no-extra-parens": "off",
      "@typescript-eslint/no-extra-parens": [
        "warn",
        "all",
        {
          "allowParensAfterCommentPattern": "@type",
          "ignoreJSX": "multi-line",
          "conditionalAssign": false,
          "returnAssign": false,
          "ternaryOperandBinaryExpressions": false,
          "nestedBinaryExpressions": false
        }
      ]
    },
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es2022": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "ignorePatterns": [
      ".*"
    ],
    "overrides": [
      {
        "files": [
          "*.test.ts"
        ]
      }
    ]
  }
}
