{
  "name": "@wai-ri/monorepo",
  "private": true,
  "version": "0.0.88",
  "description": "util",
  "author": "ziloen",
  "license": "ISC",
  "scripts": {
    "test": "vitest --ui",
    "release": "bumpp package.json packages/*/package.json --commit --no-push && pnpm -r publish --access public",
    "lint": "eslint . --ignore-pattern '*.test.*' --fix",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^18.11.7",
    "@types/semver": "^7.3.13",
    "@vitest/ui": "^0.24.3",
    "@ziloen/eslint-config": "latest",
    "@ziloen/eslint-config-format": "latest",
    "bumpp": "^8.2.1",
    "eslint": "^8.26.0",
    "jsdom": "^20.0.1",
    "typescript-lib-enhancer": "^1.0.6",
    "vite": "^3.2.0",
    "vitest": "^0.24.3"
  },
  "dependencies": {
    "@types/react": "^18.0.24",
    "axios": "^1.1.3",
    "d3": "^7.6.1",
    "echarts": "^5.4.0",
    "react": "^18.2.0",
    "rxjs": "^7.5.7",
    "three": "^0.146.0",
    "typescript": "latest",
    "vue": "^3.2.41",
    "vue-router": "^4.1.6"
  },
  "eslintConfig": {
    "extends": [
      "@ziloen",
      "@ziloen/eslint-config-format"
    ],
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es2022": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-promise-executor-return": "off"
    },
    "ignorePatterns": [
      ".*"
    ],
    "overrides": [
      {
        "files": [
          "*.test.ts"
        ],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  }
}
