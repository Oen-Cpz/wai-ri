{
  "name": "@wai-ri/monorepo",
  "private": true,
  "version": "0.0.89",
  "description": "util",
  "author": "ziloen",
  "license": "ISC",
  "scripts": {
    "test": "vitest --ui",
    "release": "bumpp package.json packages/*/package.json --commit --no-push && pnpm -r publish --access public",
    "lint": "eslint . --ignore-pattern '*.test.*' --fix",
    "typecheck": "vitest typecheck"
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "@types/semver": "^7.3.13",
    "@vitest/ui": "^0.26.2",
    "@ziloen/eslint-config": "^0.0.79",
    "@ziloen/eslint-config-format": "^0.0.79",
    "bumpp": "^8.2.1",
    "eslint": "^8.30.0",
    "jsdom": "^20.0.3",
    "typescript-lib-enhancer": "^1.0.6",
    "vite": "^4.0.3",
    "vitest": "^0.26.2"
  },
  "dependencies": {
    "@types/react": "^18.0.26",
    "axios": "^1.2.1",
    "d3": "^7.8.0",
    "echarts": "^5.4.1",
    "react": "^18.2.0",
    "rxjs": "^7.8.0",
    "three": "^0.148.0",
    "typescript": "^4.9.4",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6"
  },
  "eslintConfig": {
    "extends": [
      "@ziloen",
      "@ziloen/eslint-config-format"
    ],
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es2022": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/no-confusing-void-expression": "off"
    },
    "ignorePatterns": [
      ".*"
    ],
    "overrides": [
      {
        "files": [
          "*.test.ts"
        ],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  }
}