{
  "name": "@wai-ri/monorepo",
  "private": true,
  "version": "0.0.99",
  "description": "util",
  "author": "ziloen",
  "license": "ISC",
  "scripts": {
    "test": "vitest --ui",
    "release": "bumpp package.json packages/*/package.json --commit --no-push && pnpm -r publish --access public",
    "lint": "eslint . --ignore-pattern '*.test.*' --fix",
    "typecheck": "vitest typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.3.2",
    "@vitest/ui": "^0.32.2",
    "@ziloen/eslint-config": "^0.0.94",
    "@ziloen/eslint-config-format": "^0.0.94",
    "bumpp": "^9.1.1",
    "eslint": "^8.43.0",
    "jsdom": "^22.1.0",
    "typescript-lib-enhancer": "^1.0.8",
    "vite": "^4.3.9",
    "vitest": "^0.32.2"
  },
  "dependencies": {
    "typescript": "^5.1.6"
  },
  "eslintConfig": {
    "extends": [
      "@ziloen",
      "@ziloen/eslint-config-format"
    ],
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es2022": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "ignorePatterns": [
      ".*"
    ],
    "overrides": [
      {
        "files": [
          "*.test.ts"
        ]
      }
    ]
  }
}
